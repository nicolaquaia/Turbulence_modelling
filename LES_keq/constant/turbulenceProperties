FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      turbulenceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

simulationType          LES;

LES
{
    LESModel            kEqn;

    turbulence          on;

    printCoeffs         on;

    delta               vanDriest;

    vanDriestCoeffs
    {
        delta           cubeRootVol;
        cubeRootVolCoeffs
        {
            deltaCoeff      2.0;
        }
    }
    
    kEqnCoeffs
    {
        Ck            0.07; // Default constant, adjust if needed
    }
}


