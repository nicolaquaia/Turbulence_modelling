FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    down
    {
        type            symmetry;
    }

    right
    {
        type            zeroGradient;
    }

    up
    {
        type            symmetry;
    }

    left
    {
        type            uniformFixedValue;
        uniformValue    $internalField;
    }

    cylinder
    {
        type            noSlip;
    }

    defaultFaces
    {
        type            empty;
    }
}


