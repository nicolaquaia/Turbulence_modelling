FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 14.855;			// pitzDaily value

boundaryField
{
    down
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    up
    {
        type            symmetry;
    }

    left
    {
        type            fixedValue;
        value           uniform 14.855;
    }

    cylinder
    {
        type            epsilonWallFunction;
        value           uniform 14.855;
    }

    defaultFaces
    {
        type            empty;
    }
}


